<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ModelListActivity" >

    <TextView
        android:id="@+id/fuel"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/year"
        android:layout_alignBottom="@+id/year"
        android:layout_toRightOf="@+id/modelName"
        android:text="@string/fuel"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/industryPhoto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/btn_grey"
        android:src="@android:drawable/ic_input_add" />

    <TextView
        android:id="@+id/year"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/industryPhoto"
        android:layout_toLeftOf="@+id/fuel"
        android:text="@string/year"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/modelName"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fuel"
        android:layout_toRightOf="@+id/industryPhoto"
        android:text="@string/modelName"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
