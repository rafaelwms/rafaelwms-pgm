<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.rafaelwms.qualabastecer"
    android:versionCode="4"
    android:versionName="2.0.2" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Qual_abastecer" >
        <activity
            android:name="br.com.rafaelwms.qualabastecer.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.rafaelwms.qualabastecer.DetailsActivity"
            android:label="@string/title_activity_details"
            android:parentActivityName="br.com.rafaelwms.qualabastecer.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
        <activity
            android:name="br.com.rafaelwms.qualabastecer.CalculadoraActivity"
            android:label="@string/title_activity_calculadora"
            android:parentActivityName="br.com.rafaelwms.qualabastecer.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
        <activity
            android:name="br.com.rafaelwms.qualabastecer.VeiculoActivity"
            android:label="@string/title_activity_carro"
            android:parentActivityName="br.com.rafaelwms.qualabastecer.MainActivity"
            android:windowSoftInputMode="adjustPan" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
        <activity
            android:name="br.com.rafaelwms.qualabastecer.PostoActivity"
            android:label="@string/title_activity_posto"
            android:parentActivityName="br.com.rafaelwms.qualabastecer.MainActivity"
            android:windowSoftInputMode="adjustPan" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
        <activity
            android:name="br.com.rafaelwms.qualabastecer.AbastecimentoActivity"
            android:label="@string/title_activity_abastecimento"
            android:parentActivityName="br.com.rafaelwms.qualabastecer.MainActivity"
            android:windowSoftInputMode="adjustPan" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
        <activity
            android:name="br.com.rafaelwms.qualabastecer.EstatisticasActivity"
            android:label="@string/title_activity_estatisticas"
            android:parentActivityName="br.com.rafaelwms.qualabastecer.MainActivity"
            android:windowSoftInputMode="adjustNothing" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
    </application>

</manifest>