<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.WithActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.WithActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="bckgGrey">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/bckg_grey</item>
    </style>      
    <style name="btnBlue">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/btn_blue</item>
    </style>
    <style name="btnGreen">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/btn_green</item>
    </style>
    <style name="btnGrey">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/btn_grey</item>
    </style>    
    <style name="btnRed">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/btn_red</item>
    </style>    
</resources>
