<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.edu.rafaelwms.actionbar"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="br.edu.rafaelwms.actionbar.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.edu.rafaelwms.actionbar.TabsActivity"
            android:label="@string/title_activity_tabs"
            android:parentActivityName="br.edu.rafaelwms.actionbar.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
          <activity
            android:name="br.edu.rafaelwms.actionbar.PagerActivity"
            android:label="@string/title_activity_tabs"
            android:parentActivityName="br.edu.rafaelwms.actionbar.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
        <activity
            android:name="br.edu.rafaelwms.actionbar.SpinnerActivity"
            android:label="@string/title_activity_spinner" 
            android:parentActivityName="br.edu.rafaelwms.actionbar.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
    </application>

</manifest>
